# - ------------------------------------------------------------------------ - #
TreeTool			:=	Tools/TreeTool.sh
TreeCache			:=	Tools/TreeCache.sh
# - ------------------------------------------------------------------------ - #

# - ------------------------------------------------------------------------ - #
# Release Build Only #
# - ------------------------------------------------------------------------ - #
ifdef NDEBUG
DEFINES				+=	NDEBUG
LDFLAGS				+=	-s
# - ------------------------------------------------------------------------ - #
else
# - ------------------------------------------------------------------------ - #
DEFINES				+=	
CFLAGS				+=	-g
CPPFLAGS			+=	-g
# - ------------------------------------------------------------------------ - #
endif # NDEBUG #
# - ------------------------------------------------------------------------ - #

# - ------------------------------------------------------------------------ - #
# Allow Overloading of default GCC and G++ commands #
# - ------------------------------------------------------------------------ - #
ifndef GCC
GCC					:=	$(GCC_PREFIX)gcc
endif # GCC #
# - ------------------------------------------------------------------------ - #
ifndef GXX
GXX					:=	$(GCC_PREFIX)g++
endif # GXX #
# - ------------------------------------------------------------------------ - #
ifndef GLD
GLD					:=	$(GCC_PREFIX)ld
endif # GLD #
# - ------------------------------------------------------------------------ - #

# - ------------------------------------------------------------------------ - #
ifdef OSIZE # Optimized for Size #
# - ------------------------------------------------------------------------ - #
CFLAGS				+=	-Os
CPPFLAGS			+=	-Os
# - ------------------------------------------------------------------------ - #
else ifdef O3 # Optimized for Space #
# - ------------------------------------------------------------------------ - #
CFLAGS				+=	-O3
CPPFLAGS			+=	-O3
# - ------------------------------------------------------------------------ - #
else ifdef O0 # No Optimizations #
# - ------------------------------------------------------------------------ - #
CFLAGS				+=	-O0
CPPFLAGS			+=	-O0
# - ------------------------------------------------------------------------ - #
else # Default #
# - ------------------------------------------------------------------------ - #
CFLAGS				+=	-O0
CPPFLAGS			+=	-O0
# - ------------------------------------------------------------------------ - #
endif # Optimizations #
# - ------------------------------------------------------------------------ - #
