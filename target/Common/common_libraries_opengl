# - ------------------------------------------------------------------------ - #
ifdef USES_GRAPHICS
# - ------------------------------------------------------------------------ - #

## - ------------------------------------------------------------------------ - #
#ifdef USES_OPENGL_LIB
## - ------------------------------------------------------------------------ - #
#ifdef USES_DESKTOP
## - ------------------------------------------------------------------------ - #
#	ifdef USES_SHADERS
#		ifdef USES_BATCHING
#			USES_OPENGL3 := true
#		else  # !USES_BATCHING #
#			USES_OPENGL2 := true
#		endif # USES_BATCHING #
#	else  # !USES_SHADERS #
#		USES_OPENGL1 := true
#	endif # !USES_SHADERS #
## - ------------------------------------------------------------------------ - #
#else  # !USES_DESKTOP #
## - ------------------------------------------------------------------------ - #
#	ifdef USES_SHADERS
#		ifdef USES_BATCHING
#			USES_OPENGL_ES3 := true
#		else  # !USES_BATCHING #
#			USES_OPENGL_ES2 := true
#		endif # USES_BATCHING #
#	else  # !USES_SHADERS #
#		USES_OPENGL_ES1 := true
#	endif # !USES_SHADERS #
## - ------------------------------------------------------------------------ - #
#endif # USES_DESKTOP #
## - ------------------------------------------------------------------------ - #
#endif # USES_OPENGL_LIB #
## - ------------------------------------------------------------------------ - #


# - ------------------------------------------------------------------------ - #
ifdef USES_OPENGL1
# - ------------------------------------------------------------------------ - #
# NOTE: Only reference files here suitable for OPENGL scope (no game/platform) #
# - ------------------------------------------------------------------------ - #
# Defines specific to this file #
DEFINES				+=	USES_OPENGL USES_OPENGL1
# - ------------------------------------------------------------------------ - #
# Force these settings on #
USES_GLEE			:=	true
# - ------------------------------------------------------------------------ - #

# - ------------------------------------------------------------------------ - #
ifdef USES_WINDOWS
# - ------------------------------------------------------------------------ - #
DEFINES				+=	USES_WGL
# - ------------------------------------------------------------------------ - #
# Libraries specific to this file (full include path or -l) #
LIBRARIES			+=	-lopengl32
# - ------------------------------------------------------------------------ - #
endif # USES_WINDOWS #
# - ------------------------------------------------------------------------ - #

# - ------------------------------------------------------------------------ - #
ifdef USES_UNIX
# - ------------------------------------------------------------------------ - #
DEFINES				+=	USES_GLX
# - ------------------------------------------------------------------------ - #
# Libraries specific to this file (full include path or -l) #
LIBRARIES			+=	-lGL
# - ------------------------------------------------------------------------ - #
endif # USES_WINDOWS #
# - ------------------------------------------------------------------------ - #
endif # USES_OPENGL1
# - ------------------------------------------------------------------------ - #


# - ------------------------------------------------------------------------ - #
# Using OpenGL 3 and 4 is the same as using OpenGL 2, just need an extra define.
# - ------------------------------------------------------------------------ - #
ifdef USES_OPENGL3
# - ------------------------------------------------------------------------ - #
DEFINES				+=	USES_OPENGL3
USES_OPENGL2		:=	true
# - ------------------------------------------------------------------------ - #
endif # USES_OPENGL3 #
# - ------------------------------------------------------------------------ - #
ifdef USES_OPENGL4
# - ------------------------------------------------------------------------ - #
DEFINES				+=	USES_OPENGL4
USES_OPENGL2		:=	true
# - ------------------------------------------------------------------------ - #
endif # USES_OPENGL4 #
# - ------------------------------------------------------------------------ - #


# - ------------------------------------------------------------------------ - #
ifdef USES_OPENGL2
# - ------------------------------------------------------------------------ - #
# NOTE: Only reference files here suitable for OPENGL scope (no game/platform) #
# - ------------------------------------------------------------------------ - #
# Defines specific to this file #
DEFINES				+=	USES_OPENGL USES_OPENGL2 USES_FBO USES_SHADERS
# - ------------------------------------------------------------------------ - #
# Force these settings on #
USES_GLEE			:=	true
# - ------------------------------------------------------------------------ - #

# - ------------------------------------------------------------------------ - #
ifdef USES_WINDOWS
# - ------------------------------------------------------------------------ - #
# Defines specific to this file #
DEFINES				+=	USES_WGL
# - ------------------------------------------------------------------------ - #
# Libraries specific to this file (full include path or -l) #
LIBRARIES			+=	-lopengl32
# - ------------------------------------------------------------------------ - #
endif # USES_WINDOWS #
# - ------------------------------------------------------------------------ - #

# - ------------------------------------------------------------------------ - #
ifdef USES_UNIX
# - ------------------------------------------------------------------------ - #
# Defines specific to this file #
DEFINES				+=	USES_GLX
# - ------------------------------------------------------------------------ - #
# Libraries specific to this file (full include path or -l) #
LIBRARIES			+=	-lGL
# - ------------------------------------------------------------------------ - #
endif # USES_UNIX #
# - ------------------------------------------------------------------------ - #
endif # USES_OPENGL2
# - ------------------------------------------------------------------------ - #


# - ------------------------------------------------------------------------ - #
ifdef USES_GLEE
# - ------------------------------------------------------------------------ - #
# Places to pull code and include files from #
SRC_FOLDERS			+=	src/External/GLEE
# - ------------------------------------------------------------------------ - #
# Defines specific to this file #
DEFINES				+=	USES_GLEE
# - ------------------------------------------------------------------------ - #
endif # USES_GLEE #
# - ------------------------------------------------------------------------ - #


# - ------------------------------------------------------------------------ - #
ifdef USES_OPENGL_ES1
# - ------------------------------------------------------------------------ - #
# NOTE: Only reference files here suitable for OPENGL scope (no game/platform) #
# - ------------------------------------------------------------------------ - #
# Defines specific to this file #
DEFINES				+=	USES_OPENGL_ES USES_OPENGL_ES1
# - ------------------------------------------------------------------------ - #
# Libraries specific to this file (full include path or -l) #
LIBRARIES			+=	-lEGL -lGLES_CM
# - ------------------------------------------------------------------------ - #
endif # USES_OPENGL_ES1
# - ------------------------------------------------------------------------ - #


# - ------------------------------------------------------------------------ - #
ifdef USES_OPENGL_ES2
# - ------------------------------------------------------------------------ - #
# NOTE: Only reference files here suitable for OPENGL scope (no game/platform) #
# - ------------------------------------------------------------------------ - #
# Defines specific to this file #
DEFINES				+=	USES_OPENGL_ES USES_OPENGL_ES2 \
						USES_FBO USES_GL_SHADERS
# - ------------------------------------------------------------------------ - #
# Libraries specific to this file (full include path or -l) #
LIBRARIES			+=	-lEGL -lGLESv2
# - ------------------------------------------------------------------------ - #
endif # USES_OPENGL_ES2
# - ------------------------------------------------------------------------ - #


# - ------------------------------------------------------------------------ - #
ifdef USES_OPENGL_ES3
# - ------------------------------------------------------------------------ - #
# NOTE: Only reference files here suitable for OPENGL scope (no game/platform) #
# - ------------------------------------------------------------------------ - #
# Defines specific to this file #
DEFINES				+=	USES_OPENGL_ES USES_OPENGL_ES2 USES_OPENGL_ES3 \
						USES_FBO USES_GL_SHADERS
# - ------------------------------------------------------------------------ - #
# Libraries specific to this file (full include path or -l) #
LIBRARIES			+=	-lEGL -lGLESv3
# - ------------------------------------------------------------------------ - #
endif # USES_OPENGL_ES3
# - ------------------------------------------------------------------------ - #


# - ------------------------------------------------------------------------ - #
endif # USES_GRAPHICS #
# - ------------------------------------------------------------------------ - #
