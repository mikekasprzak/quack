# - ------------------------------------------------------------------------ - #
# NOTE: Only reference files here suitable for OPENGL scope (no game/platform) #
# - ------------------------------------------------------------------------ - #
# Defines specific to this file #
DEFINES				+=	USES_OPENGL USES_OPENGL2 USES_FBO USES_SHADERS
# - ------------------------------------------------------------------------ - #
# Force these settings on #
USES_GLEE			:=	true
# - ------------------------------------------------------------------------ - #

# - ------------------------------------------------------------------------ - #
# Using OpenGL 3 and 4 is the same as using OpenGL 2, just need an extra define.
# - ------------------------------------------------------------------------ - #
ifdef USES_OPENGL3
# - ------------------------------------------------------------------------ - #
DEFINES				+=	USES_OPENGL3
# - ------------------------------------------------------------------------ - #
endif # USES_OPENGL3 #
# - ------------------------------------------------------------------------ - #
ifdef USES_OPENGL4
# - ------------------------------------------------------------------------ - #
DEFINES				+=	USES_OPENGL4
# - ------------------------------------------------------------------------ - #
endif # USES_OPENGL4 #
# - ------------------------------------------------------------------------ - #

# - ------------------------------------------------------------------------ - #
ifdef USES_GLEE
# - ------------------------------------------------------------------------ - #
# Places to pull code and include files from #
SRC_FOLDERS			+=	src/GEL/External/GLEE
# - ------------------------------------------------------------------------ - #
# Defines specific to this file #
DEFINES				+=	USES_GLEE
# - ------------------------------------------------------------------------ - #
endif # USES_GLEE #
# - ------------------------------------------------------------------------ - #


# - ------------------------------------------------------------------------ - #
ifdef USES_WINDOWS
# - ------------------------------------------------------------------------ - #
# Defines specific to this file #
DEFINES				+=	USES_WGL
# - ------------------------------------------------------------------------ - #
# Libraries specific to this file (full include path or -l) #
LIBRARIES			+=	-lopengl32
# - ------------------------------------------------------------------------ - #
endif # USES_WINDOWS #
# - ------------------------------------------------------------------------ - #


# - ------------------------------------------------------------------------ - #
ifdef USES_UNIX
# - ------------------------------------------------------------------------ - #
# Defines specific to this file #
DEFINES				+=	USES_GLX
# - ------------------------------------------------------------------------ - #
# Libraries specific to this file (full include path or -l) #
LIBRARIES			+=	-lGL
# - ------------------------------------------------------------------------ - #
endif # USES_WINDOWS #
# - ------------------------------------------------------------------------ - #
